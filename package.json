{
  "name": "quotick",
  "displayName": "Quotick",
  "description": "Automatically converts quotes to backticks when typing template literals and reverts back when template syntax is removed",
  "version": "0.0.7",
  "publisher": "kartiklabhshetwar",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/KartikLabhshetwar/quotick.git"
  },
  "bugs": {
    "url": "https://github.com/KartikLabhshetwar/quotick/issues"
  },
  "homepage": "https://github.com/KartikLabhshetwar/quotick#readme",
  "keywords": [
    "template literal",
    "converter",
    "quotes",
    "backticks",
    "javascript",
    "typescript",
    "auto",
    "autoconverter",
    "string",
    "string template",
    "revert",
    "bidirectional",
    "smart conversion"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/src/extension.js",
  "tags": [
    "auto",
    "string",
    "template",
    "javascriptreact",
    "typescriptreact",
    "template literal",
    "quote converter", 
    "backticks",
    "javascript",
    "typescript",
    "formatter",
    "auto converter",
    "revert",
    "bidirectional",
    "smart conversion"
  ],
  "contributes": {
    "commands": [
      {
        "command": "quotick.toggleAutoConvert",
        "title": "Toggle Auto-Convert",
        "category": "Quotick"
      },
      {
        "command": "quotick.test",
        "title": "Test Conversion",
        "category": "Quotick"
      },
      {
        "command": "quotick.toggleRevertFeature",
        "title": "Toggle Revert Feature",
        "category": "Quotick"
      },
      {
        "command": "quotick.enableExtension",
        "title": "Enable Quotick",
        "category": "Quotick"
      },
      {
        "command": "quotick.disableExtension",
        "title": "Disable Quotick",
        "category": "Quotick"
      }
    ],
    "configuration": {
      "title": "Quotick",
      "properties": {
        "quotick.enableAutoConvert": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic conversion when typing template literals"
        },
        "quotick.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications when conversions are made"
        },
        "quotick.supportedLanguages": {
          "type": "array",
          "default": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
          "description": "File types to monitor for conversions"
        },
        "quotick.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome message when extension is activated"
        },
        "quotick.autoRemoveTemplateString": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic reversion of backticks to quotes when template syntax is removed"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.0",
    "mocha": "^10.0.0",
    "typescript": "^4.9.4"
  }
}
